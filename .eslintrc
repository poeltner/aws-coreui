{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb" ],
    "rules": {
        "comma-dangle": 0
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.6.3"
        }
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "jest": true,
        "es6": true
    },
    "globals": {
        "shallow": true,
        "render": true,
        "mount": true
    }
}